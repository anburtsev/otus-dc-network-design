! device: leaf2 (vEOS-lab, EOS-4.26.4M)
!
! boot system flash:/vEOS-lab.swi
!
no aaa root
!
transceiver qsfp default-mode 4x10G
!
service routing protocols model multi-agent
!
hostname leaf2
!
spanning-tree mode mstp
spanning-tree edge-port bpdufilter default
!
vlan 101
   name Prod_net1
!
vlan 102
   name Prod_net2
!
vlan 201
   name Dev_net1
!
vlan 202
   name Dev_net2
!
vrf instance DEV
   !! Development Network
!
vrf instance PROD
   !! Production Network
!
interface Ethernet1
   no switchport
   ip address 10.0.0.3/31
   isis enable underlay
   isis network point-to-point
!
interface Ethernet2
   no switchport
   ip address 10.0.0.11/31
   isis enable underlay
   isis network point-to-point
!
interface Ethernet3
   description prod2-pc
   switchport access vlan 101
   spanning-tree portfast
!
interface Ethernet4
   switchport access vlan 102
   spanning-tree portfast
!
interface Ethernet5
   switchport access vlan 202
   spanning-tree portfast
!
interface Ethernet6
!
interface Ethernet7
!
interface Ethernet8
!
interface Loopback0
   ip address 10.0.2.2/32
   isis enable underlay
!
interface Management1
!
interface Vlan101
   vrf PROD
   ip address virtual 10.0.101.1/24
!
interface Vlan102
   vrf PROD
   ip address virtual 10.0.102.1/24
!
interface Vlan201
   vrf DEV
   ip address virtual 10.0.201.1/24
!
interface Vlan202
   vrf DEV
   ip address virtual 10.0.202.1/24
!
interface Vxlan1
   vxlan source-interface Loopback0
   vxlan udp-port 4789
   vxlan vlan 101-102,201-202 vni 10101-10102,10201-10202
   vxlan vrf DEV vni 10200
   vxlan vrf PROD vni 10100
!
ip virtual-router mac-address 00:00:22:22:33:33
!
ip routing
ip routing vrf DEV
ip routing vrf PROD
!
router bgp 4259840011
   router-id 10.0.2.2
   timers bgp 2 6
   maximum-paths 16
   neighbor SPINE_OVERLAY peer group
   neighbor SPINE_OVERLAY update-source Loopback0
   neighbor SPINE_OVERLAY password 7 z0vwlMLDMEs=
   neighbor SPINE_OVERLAY send-community
   neighbor 10.0.1.1 peer group SPINE_OVERLAY
   neighbor 10.0.1.1 remote-as 4259840011
   neighbor 10.0.1.2 peer group SPINE_OVERLAY
   neighbor 10.0.1.2 remote-as 4259840011
   !
   vlan 101
      rd 10.0.2.2:10101
      route-target both 11:10101
      redistribute learned
   !
   vlan 102
      rd 10.0.2.2:10102
      route-target both 11:10102
      redistribute learned
   !
   vlan 201
      rd 10.0.2.2:10201
      route-target both 11:10201
      redistribute learned
   !
   vlan 202
      rd 10.0.2.2:10202
      route-target both 11:10202
      redistribute learned
   !
   address-family evpn
      neighbor SPINE_OVERLAY activate
   !
   address-family ipv4
      no neighbor SPINE_OVERLAY activate
   !
   vrf DEV
      rd 10.0.2.2:200
      route-target import evpn 11:10200
      route-target export evpn 11:10200
      redistribute connected
   !
   vrf PROD
      rd 10.0.2.2:100
      route-target import evpn 11:10100
      route-target export evpn 11:10100
      redistribute connected
!
router isis underlay
   net 49.0001.0100.0000.2002.00
   is-type level-1
   authentication mode md5
   authentication key 7 wHFCFUpFn04=
   !
   address-family ipv4 unicast
!
end
